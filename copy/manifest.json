{
  "name": "Visual Inspector(前端重构+视觉走查辅助工具)",
  "short_name": "VI",
  "version": "1.5.0",
  "manifest_version": 2,
  "default_locale": "zh_CN",
  "author":"paul",
  "description": "__MSG_pluginDesc__",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon_gray.png",
    "default_title": "Visual Inspector"
  },
  "permissions": [
    "unlimitedStorage", "storage", "tabs", "activeTab"
  ],
  "background":{
    "scripts":["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
	"index.js",
	"index.css"
  ]
}