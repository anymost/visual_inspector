{
  "name": "Visual Inspector",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "A chrome plug-in which provides a variety of ways to help front-end developers quickly locate differences between design drafts and web pages.",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Visual Inspector",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
  // "web_accessible_resources": [
  //   "inject.js"
  // ],
  // "background":{
  //   "scripts":[
  //     "background.js"
  //   ],
  // "persistent": false
  // }
}