{
  "name": "Visual Inspector",
  "short_name": "VI",
  "version": "1.0.1",
  "manifest_version": 2,
  "author":"paul",
  "homepage_url": "https://github.com/gp5251",
  "description": "A helper tool for fast front-end development and visual inspection. 前端重构和视觉走查的辅助工具。",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "128": "icon.png"
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Visual Inspector",
    "default_popup": "popup.html"
  },
  "permissions": [
    "declarativeContent", "tabs", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background":{
    "scripts":["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "content.css"
  ]
}